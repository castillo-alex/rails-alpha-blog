<% if @article.errors.any? %>
  <h2>
    The following errors prevented the article from being created:
  </h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @article do |f| %>
  <div class="form-group row">
    <%= f.label :title,
        class: "col-sm-2 col-form-label"
    %>
    <%= f.text_field :title,
       autocomplete: "off",
       autofocus: true,
       class: "col-sm-8 form-control",
       placeholder: "Title of article"
     %>
     <span class="column">
       <%= link_to "Reset <br/> Article".html_safe,
       new_article_path,
       class: "badge badge-danger offset-1"
       %>
     </span>
  </div>
  <div class="form-group row">
    <%= f.label :description,
        class: "col-sm-2 col-form-label"
     %>
    <%= f.text_area :description,
        class: "col-sm-8 form-control",
        placeholder: "Body of article",
        rows: 16
     %>
  </div>
  <div class="form-group row">
    <%= f.submit class: "col-sm-2 offset-sm-2 btn btn-info btn-sm" %>
  </div>
  <div class="form-group row">
    <%= link_to "Back to articles",
    articles_path,
    class: "col-sm-2 btn btn-secondary btn-sm offset-2"
    %>
  </div>
<% end %>
