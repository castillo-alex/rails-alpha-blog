<h1 align="center">All Bloggers</h1>

<div align="center">
  <div class="row d-flex justify-content-center">
      <%= will_paginate %>
  </div>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-4">
          <li  style="padding-top: 1em"><%= link_to gravatar_for(user), user_path(user) %></li>
          <li
            class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li>
            <small>
              <%= pluralize(user.articles.count, "article") if user.articles %>
            </small>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <div class="row d-flex justify-content-center">
      <%= will_paginate %>
  </div>
</div>
