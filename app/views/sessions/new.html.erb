<h1 align="center">Log In</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email,
          autocomplete: "off",
          autofocus: true,
          class: "form-control",
          placeholder: "Enter Email"
       %>
    </div>
  </div>
  <div class="form-group row">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password,
          autocomplete: "off",
          class: "form-control",
          placeholder: "Enter Password"
      %>
    </div>
  </div>
  <div class="form-group row offset-2">
      <%=
        f.submit 'Log In', class: "btn btn-info btn-sm col-sm-2"
      %>
  </div>
  <div class="form-group row offset-2">
      <%= link_to "Go to articles",
          articles_path,
          class: "btn btn-secondary btn-sm col-sm-2"
      %>
  </div>
<% end %>
